<div class="row">
  <div class="container col-md-12">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img class="img-thumbnail" src="https://i.ytimg.com/vi/3he9vodjwIY/hqdefault.jpg" class="avatar img-circle" alt="avatar">
          <h6>Upload profile photo</h6>
          <input type="file" class="form-control">
        </div>
      </div>


      <div class="col-md-9 personal-info">

        <h3>Settings and Password</h3>

        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Username</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" readonly="readonly" value="<%=current_user.email_address%>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Time Zone:</label>
            <div class="col-lg-8">
              <div class="ui-select">
                <select id="user_time_zone" class="form-control">
                  <option value="Melbourne">(UTC+10:00) Canberra, Melbourne, Sydney</option>
                  <option value="Perth">(UTC+08:00) Perth</option>
                  <option value="Darwin">(UTC+09:30) Darwin </option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Current Password:</label>
            <div class="col-md-8">
              <input class="form-control" type="password" value="11111122333">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">New password:</label>
            <div class="col-md-8">
              <input class="form-control" type="password" value="11111122333">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="button" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>
</div>
